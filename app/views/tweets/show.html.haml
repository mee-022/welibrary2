.contents-row
  .content_post
    - if user_signed_in? && current_user.id == @tweet.user_id
      .more
        %span= image_tag 'arrow_top.png'
        %ul.more_list
          %li
            = link_to '編集', edit_tweet_path(@tweet.id), method: :get
          %li
            = link_to '削除', tweet_path(@tweet.id), method: :delete
    .content-image
      = image_tag(@tweet.image.url, class: "image")
    .content-info
      .content-title
        【作品名】
        %br
        = @tweet.title
      .content-author
        【著者】
        %br
        = @tweet.author
      .content-text
        = @tweet.text
      .user-name
        %a{:href => "/users/#{@tweet.user.id}"}
          %span 投稿者
          = @tweet.user.nickname